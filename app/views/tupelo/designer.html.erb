<div class="container">
	
	<%= render partial: "nav" %>

	<div class="row no-bottom">
		<div class="col-xs-12 designer-detail">
			<div class="col-xs-12 display-container">

				<div class="col-xs-12">
					<h4 class="pull-left"><%= @designer.name %></h4>
					<h4 class="pull-right"><%= @designer.price %></h4>
				</div>
				<div class="col-xs-12">
					<p class="designer-desc"><%= @designer.description %></p>
				</div>

				<div style="height: 30px; width: 100%; clear: both;"></div>

				<% @dresses.each_with_index do |dress, index| %>

				<% if(index + 1) % 2 === 0 %>
					<div class="col-xs-12 col-sm-6 pull-right right-col reveal">
				<% else %>
					<div class="col-xs-12 col-sm-6 pull-left left-col reveal">
				<% end
				%>	
						<div class="dress_contain">
							<%= image_tag(dress.main_image.url(:display), :alt => dress, :class => "dress-img") %>
							<span class="dress_name"><%= dress.name %></span>
						</div>
	 				</div>


	 				<% DressImage.where(dress_id: dress).limit(4).each_with_index do |additional_img, ad_index| %>

	 					<% if (((index + 1) % 2) + ((ad_index + 1) % 2))=== 0 %>
							<div class="col-xs-12 col-sm-6 pull-right right-col reveal">
						<% else %>
							<div class="col-xs-12 col-sm-6 pull-left left-col reveal">
						<% end
						%>
						<div class="dress_contain">
							<%= image_tag(additional_img.image.url(:display), :alt => dress, :class => "dress-img") %>
							<span class="dress_name"><%= dress.name %></span>
						</div>
						</div>
					<% end %>
				<% end %>

			</div>		
		</div>
	</div>
</div>


<%= render partial: "tupelo_footer" %>

<%= render partial: "footer" %>
