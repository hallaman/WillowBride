<div class="container">
	
	<%= render partial: "nav" %>

	<div class="row">
		<div class="col-xs-12">
			<div class="col-xs-12 col-md-6">
				<%= image_tag(@store.shop_image, :alt => "Tupelo, MS", :class => "location-img") %>
				<%# image_tag("tupelo_shop.png", :alt => "Tupelo, MS", :class => "location-img") %>
			</div>
			<div class="col-xs-12 col-md-6 location-info">
				<h3 class="city-title"><%= @store.name %></h3>
				<p><%= @store.summary.html_safe %></p>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12">
			<div class="col-xs-12">
				<div class="col-xs-12 appointment-info">
					<h3>All dresses are shown by appointment</h3>
					<h3>Book today so we can introduce ourselves</h3>
					<a href="<%= @store.url %>" target="_blank"  class="btn">Book an appointment</a>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12">
			<%= link_to(tupelo_experience_path) do %>
				<div class="col-xs-12 col-sm-6 experience">
						<%= image_tag(@store.the_experience_image, :alt => "Tupelo, MS", :class => "location-img") %>
						<%# image_tag("tupelo_experience.png", :alt => "Tupelo, MS", :class => "location-img") %>
					<div class="label-holder">
						<h2>The Experience</h2>
						<span class="arrow-a">
						  <span class="arrow-circle"><span class="glyphicon glyphicon-menu-right arrow"></span></span>
						</span>
					</div>
				</div>
			<% end %>

			<%= link_to(tupelo_explore_path) do %>
				<div class="col-xs-12 col-sm-6 dresses">
						<%= image_tag(@store.gallery_image, :alt => "Tupelo, MS", :class => "location-img") %>
						<%# image_tag("tupelo_gallery.png", :alt => "Tupelo, MS", :class => "location-img") %>
					<div class="label-holder">
						<h2>Explore Dresses</h2>
						<span class="arrow-a">
						  <span class="arrow-circle"><span class="glyphicon glyphicon-menu-right arrow"></span></span>
						</span>
					</div>
				</div>
			<% end %>

		</div>
	</div>
</div>

<%= render partial: "tupelo_footer" %>

<%= render partial: "footer" %>

