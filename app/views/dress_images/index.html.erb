<p id="notice"><%= notice %></p>

<h1>Listing Dress Images</h1>

<table>
  <thead>
    <tr>
      <th>Dress</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dress_images.each do |dress_image| %>
      <tr>
        <td><%= dress_image.dress_id %></td>
        <td><%= dress_image.image %></td>
        <td><%= link_to 'Show', dress_image %></td>
        <td><%= link_to 'Edit', edit_dress_image_path(dress_image) %></td>
        <td><%= link_to 'Destroy', dress_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

